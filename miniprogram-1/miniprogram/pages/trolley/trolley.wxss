.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  .swiper {
    width: 100%;
    height: 250rpx;
  }
  
  .swiper-item {
    width: 100%;
    height: 100%;
  }
  
  .content {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: calc(100vh - 250rpx);
  }
  
  .menu {
    width: 50%;
    height: 100%;
  }
  
  .menu-item {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
  }
  
  .menu-item.active {
    background-color: #f2f2f2;
  }
  
  .product {
    width: 50%;
    height: 100%;
  }
  
  .product-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
  }
  
  .product-image {
    width: 100%;
    height: 400rpx;
  }
  
  .product-name {
    margin-top: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .product-price {
    margin-top: 20rpx;
    font-size: 28rpx;
  }
  